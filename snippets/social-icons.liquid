<ul class="no-bullets social-icons {{ additional_classes }}">
  {%- if settings.social_facebook_link != blank -%}
    <li>
      <a
        target="_blank"
        rel="noopener"
        href="{{ settings.social_facebook_link }}"
        title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}"
      >
        <img
          src="{{ 'white_PNG_f_logo_RGB-White_72.png' | asset_url }}"
          width="35"
          height="35"
          alt="Facebook icon"
          loading="lazy"
