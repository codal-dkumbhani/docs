          "type": "range",
          "id": "container_width",
          "label": "t:sections.footer.blocks.logo.settings.container_width.label",
          "default": 25,
          "min": 15,
          "max": 95,
          "unit": "%"
        },
        {
          "type": "text",
          "id": "customer_service_text",
          "label": "Customer Service Text"
        },
        {
          "type": "text",
          "id": "customer_service_contact_no",
          "label": "Customer Service Contact No."
        },
        {
          "type": "text",
          "id": "send_msg_text",
          "label": "Send message text"
        },
        {
          "type": "url",
          "id": "send_msg_url",
          "label": "Send message URL"
        },
        {
          "type": "text",
          "id": "worldwide_office_text",
          "label": "Worldwide Office text"
        },
        {
          "type": "url",
          "id": "worldwide_office_url",
