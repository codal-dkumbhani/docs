          <div class="modal-header-right">
            <a href="#">Edit Design</a>
            <button type="button" class="close" data-dismiss="modal">
              <span>Close</span>
              {% render 'thermos-icon-modal-close' %}
            </button>
          </div>
        </div>
        <div class="modal-body">
          <div class="front-img">
            <img width="auto" height="auto" src="">
          </div>
          <div class="back-img" style="display:none;">
            <img width="auto" height="auto" src="">
          </div>
          <div class="customizer-cart-img-loader">
            <div class="lds-roller">
              <div></div>
              <div></div>
              <div></div>
              <div></div>
              <div></div>
              <div></div>
              <div></div>
              <div></div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
