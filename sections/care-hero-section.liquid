{{ 'care-hero-section.css' | asset_url | stylesheet_tag }}
<div
  data-section-id="{{ section.id }}"
  data-section-type="care-hero-section"
  class="care-hero-section"
>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-12 left-section">
        {% if section.settings.headline != empty %}
          <div class="care-headline">{{ section.settings.headline }}</div>
        {% endif %}
      </div>
      <div class="col-lg-6 col-md-12 right-section">
        {% if section.settings.heading != empty %}
          <div class="care-heading">
            {{ section.settings.heading }}
          </div>
        {% endif %}
        {% if section.settings.description != empty %}
          <div class="care-description">{{ section.settings.description }}</div>
        {% endif %}
        {% if section.settings.button_text != empty %}
          <div class="care-hero-button">
            <a class="button" href="{{ section.settings.button_url }}">
              {{- section.settings.button_text -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Care Hero section",
  "class": "care_hero_section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Upload Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Upload Background Image (Mobile)"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline Text"
    },
    {
      "type": "color",
      "id": "headline_text_color",
      "label": "Headline Text Color",
      "default": "#6e5ee4"
    },
    {
      "type": "number",
      "id": "headline_text_size",
      "label": "Headline Text Size(Desktop)"
    },
    {
      "type": "number",
      "id": "headline_text_size_mobile",
      "label": "Headline Text Size(Mobile)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Heading Text Color",
      "default": "#6E5EE4"
    },
    {
      "type": "number",
      "id": "heading_text_size",
      "label": "Headline Text Size(Desktop)"
    },
    {
      "type": "number",
      "id": "heading_text_size_mobile",
      "label": "Headline Text Size(Mobile)"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Color",
      "default": "#6E5EE4"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Care Hero section"
    }
  ]
}
{% endschema %}
{% style %}
  .care-hero-section {
    background-image: url('{{ section.settings.background_image | image_url }}');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    font-family: var(--thermos-aktiv-grotesk);
    min-height: 700px;
    align-items: center;
    display: flex;
  }
  .care-hero-section .care-headline{
    font-family: var(--thermos-aktiv-grotesk);
    font-weight: var(--thermos-font-Weight-bold);
    font-size: {{ section.settings.headline_text_size }}px;
    letter-spacing: normal;
    line-height: var(--thermos-line-height-14);
    color: {{ section.settings.headline_text_color }};
  }
  .care-hero-section .care-heading{
    font-family: var(--thermos-aktiv-grotesk);
    font-weight: var(--thermos-font-Weight-bold);
    font-size: {{ section.settings.heading_text_size }}px;
    letter-spacing: normal;
    color: {{ section.settings.heading_text_color }};
  }
  .care-hero-section .care-hero-button a.button{
    background: {{ section.settings.button_background_color }};
    padding: 10px 30px;
    border-radius: 50px;
    color: {{ section.settings.button_text_color }};;
  }
  @media (max-width: 767px) {
    .care-hero-section {
      background-image: url('{{ section.settings.background_image_mobile | image_url }}');
      min-height: 400px;
    }
    .care-hero-section .care-headline {
      font-size: var(--thermos-font-size-50);
    }
    .care-hero-section .care-heading{
      font-size: {{ section.settings.heading_text_size_mobile }}px;
    }
  }
{% endstyle %}
